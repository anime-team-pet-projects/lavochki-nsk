{
  "semi": false,
  "tabWidth": 2,
  "printWidth": 120,

  "useTabs": false,
  "singleQuote": true,
  "insertPragma": false,
  "bracketSpacing": true,
  "requirePragma": false,
  "jsxSingleQuote": true,
  "jsxBracketSameLine": true,
  "bracketSameLine": false,

  "htmlWhitespaceSensitivity": "strict",
  "quoteProps": "as-needed",
  "arrowParents": "always",
  "trailingComma": "es5",
  "proseWrap": "never",
  "endOfLine": "lf",
  "react/jsx-max-props-per-line": [1, { "when": "always" }]
}
